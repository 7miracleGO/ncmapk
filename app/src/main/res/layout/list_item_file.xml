<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="60dp">

    <androidx.constraintlayout.widget.Guideline android:id="@+id/v_05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/v_15" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/v_75" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.75" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/v_95" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.95" />

    <CheckBox
        android:id="@+id/checkbox_file_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF4D3C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_05"
        app:layout_constraintEnd_toStartOf="@id/v_15" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_15"
        app:layout_constraintEnd_toStartOf="@id/v_75">
        <TextView
            android:id="@+id/text_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/text_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A2A9AF"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_75"
        app:layout_constraintEnd_toStartOf="@id/v_95">
        <TextView
            android:id="@+id/text_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A2A9AF"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/text_file_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A2A9AF"
            android:textSize="10sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>