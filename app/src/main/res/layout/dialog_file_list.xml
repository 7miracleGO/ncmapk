<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50616D">

    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.10" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_40" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.40" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_50" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.50" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_70" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.70" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_75" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.75" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gv_95" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline android:id="@+id/gh_02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.02" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gh_13" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.13" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gh_15" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline android:id="@+id/gh_90" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.90" />

    <RadioGroup
        android:id="@+id/radiogroup_sort"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/gv_10"
        app:layout_constraintEnd_toStartOf="@id/gv_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gh_15">
        <RadioButton
            android:id="@+id/radio_sort_by_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="名称排序"
            android:textColor="#FFFFFF"
            android:buttonTint="#FF4D3C"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/radio_sort_by_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="时间排序"
            android:textColor="#FFFFFF"
            android:buttonTint="#FF4D3C"
            android:textSize="14sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button_invert_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="反选"
        android:textColor="#FF4D3C"
        android:textSize="13sp"
        android:backgroundTint="#5C6D79"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toTopOf="@id/gh_02"
        app:layout_constraintBottom_toTopOf="@id/gh_13"
        app:layout_constraintStart_toStartOf="@id/gv_50"
        app:layout_constraintEnd_toStartOf="@id/gv_70" />

    <Button
        android:id="@+id/button_select_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="全选"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:backgroundTint="#5C6D79"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toTopOf="@id/gh_02"
        app:layout_constraintBottom_toTopOf="@id/gh_13"
        app:layout_constraintStart_toStartOf="@id/gv_75"
        app:layout_constraintEnd_toStartOf="@id/gv_95" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_files"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/gh_15"
        app:layout_constraintBottom_toTopOf="@id/gh_90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无ncm文件可转换"
        android:textColor="#A2A9AF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gh_15"
        app:layout_constraintBottom_toTopOf="@id/gh_90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_delete_source"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="删除源文件"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF4D3C"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/gh_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gv_05"
        app:layout_constraintEnd_toStartOf="@id/gv_40" />

    <Button
        android:id="@+id/button_dialog_cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="取消"
        android:textColor="#FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/gh_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gv_50"
        app:layout_constraintEnd_toStartOf="@id/gv_70" />

    <Button
        android:id="@+id/button_dialog_start"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="转换"
        android:textColor="#FF4D3C"
        android:textStyle="bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/gh_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gv_75"
        app:layout_constraintEnd_toStartOf="@id/gv_95" />

</androidx.constraintlayout.widget.ConstraintLayout>